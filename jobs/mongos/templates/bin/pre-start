#!/usr/bin/env bash
set -eux

LOG_DIR=/var/vcap/sys/log/mongos
mkdir -p $LOG_DIR
chown -R vcap:vcap $LOG_DIR

exec >> ${LOG_DIR}/pre-start.stdout.log
exec 2>> ${LOG_DIR}/pre-start.stderr.log

mkdir -p /var/vcap/store/mongos/data
chown -R vcap:vcap /var/vcap/store/mongos
/var/vcap/jobs/mongos/bin/generate_ssl_cert
