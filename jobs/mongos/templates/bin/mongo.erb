#!/usr/bin/env bash

/var/vcap/packages/mongodb/bin/mongo \
  --host <%= link('routing-server').instances.map{|i| "#{i.address}:#{p('port')}"}.join(',') %> \
  --ssl --sslPEMKeyFile /var/vcap/jobs/mongos/ssl/mongodb.pem \
  --sslCAFile /var/vcap/jobs/mongos/ssl/CA.crt \
  --authenticationDatabase '$external' \
  --authenticationMechanism MONGODB-X509 "$@"