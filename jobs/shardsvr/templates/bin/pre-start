#!/usr/bin/env bash
set -eux

LOG_DIR=/var/vcap/sys/log/shardsvr
mkdir -p $LOG_DIR
chown -R vcap:vcap $LOG_DIR

exec >> ${LOG_DIR}/pre-start.stdout.log
exec 2>> ${LOG_DIR}/pre-start.stderr.log

mkdir -p /var/vcap/store/shardsvr/data
chown -R vcap:vcap /var/vcap/store/shardsvr
/var/vcap/jobs/shardsvr/bin/generate_ssl_cert